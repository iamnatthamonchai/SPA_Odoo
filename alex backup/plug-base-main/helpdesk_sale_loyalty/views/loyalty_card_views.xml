<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="loyalty_card_view_form_helpdesk_sale_loyalty" model="ir.ui.view">
        <field name="name">loyalty.card.view.form.helpdesk.sale.loyalty</field>
        <field name="model">loyalty.card</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="code" widget="CopyClipboardChar"/>
                    <field name="expiration_date"/>
                </group>
                <footer>
                    <button name="action_coupon_send" string="Send" type="object" class="btn btn-primary" data-hotkey="v"/>
                    <button name="toggle_active" string="Cancel" type="object" class="btn btn-secondary" data-hotkey="w"/>
                </footer>
            </form>
        </field>
    </record>    
</odoo>
