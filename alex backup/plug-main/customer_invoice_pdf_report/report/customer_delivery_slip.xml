                <t t-foreach="docs" t-as="o">
                    <t>
                        <div class="page">
                            <t t-call="customer_invoice_pdf_report.sltech_delivery_body"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>


    </data>
</odoo>
