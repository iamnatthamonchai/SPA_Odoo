<!--            </t>-->
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <t>
                        <div class="page">
                            <t t-call="customer_invoice_pdf_report.advert_invoice_body"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>


    </data>
</odoo>
