<odoo>
    <record id="view_company_form_add_invoice_form_number" model="ir.ui.view">
        <field name="name">res.company.form.number</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="itaas_company_setting.view_company_form_itaas_inherit"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook/page[@name='configuration']" position="inside">
                <group string="Invoice">
                    <group>
                        <field name="invoice_no_form"/>
                        <field name="invoice_and_tax_invoice_no_form"/>
                        <field name="tax_invoice_no_form"/>
                        <field name="credit_no_form"/>
                    </group>
                    <group>
                        <field name="tax_invoice_and_receipt_no_form"/>
                        <field name="show_currency_on_invoice"/>
                        <field name="show_date_auto_invoice"/>
                        <field name="debit_no_form"/>
                    </group>
                </group>

            </xpath>




        </field>
    </record>

</odoo>