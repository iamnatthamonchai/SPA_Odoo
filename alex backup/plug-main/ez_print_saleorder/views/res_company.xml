<odoo>
    <record id="view_company_form_add_sale_form_number" model="ir.ui.view">
        <field name="name">res.company.form.number</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="ez_company_setting.view_company_form_ez_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='configuration']" position="inside">
                <group string="Sale">
                    <group>
                        <field name="quotation_no_form"/>
                        <field name="sale_order_no_form"/>
                        <field name="show_date_auto_sale"/>
                    </group>
                    <group>
                        <field name="show_product_code_on_sale"/>
                        <field name="show_currency_on_sale"/>
                        <field name="standard_tax"/>
                    </group>
                </group>

            </xpath>




        </field>
    </record>

</odoo>