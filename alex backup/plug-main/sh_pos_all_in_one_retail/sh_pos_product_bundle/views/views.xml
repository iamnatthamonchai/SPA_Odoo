<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="sh_pos_config_form_view_inherit_product_bundle">
        <field name="name">pos.config.form.extended.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <h2 name="order">Enable Product Bundle</h2>
                <div class="row mt16 o_settings_container">
                    <div id="autocomplete_address" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="enable_product_bundle" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_product_bundle" />
                        </div>
                    </div>
                </div>
                <br />
            </xpath>
        </field>
    </record>
</odoo>
