<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_pos_product_seravh_by_tag_config" model="ir.ui.view">
        <field name="name">pos.product.search.by.tag.order</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[18]" position="after">
                <h2>Product Search by Tag</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-6 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_search_product" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_search_product" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>