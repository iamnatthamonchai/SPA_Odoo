<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

      <record id="product_template_form_view_product_limit" model="ir.ui.view">
            <field name="name">product.template.product.website.form.inherit.product.limit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="website_sale.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='shop']" position="after">
                    <group string="Website Product Limit">
                        <field name="apply_order_limit" />
                        <field name="order_limit" />
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

